<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          jcr:primaryType="cq:TabPanel"
          activeTab="0"
          width="500"
          height="500"
          helpPath="en/cq/current/wcm/default_components.html#Text Image"
          xtype="tabpanel">
    <items jcr:primaryType="cq:WidgetCollection">
        <tab1
                jcr:primaryType="cq:Widget"
                anchor="100%"
                title="Title"
                xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <text
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Title"
                        name="./title"
                        xtype="textfield"/>
            </items>
        </tab1>
        <tab2
                jcr:primaryType="cq:Widget"
                title="Datasource"
                xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">

                <data
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Datasource"
                        name="./data"
                        xtype="textfield"/>
                <file
                        jcr:primaryType="cq:Widget"
                        autoUploadDelay="1"
                        ddGroups="[media]"
                        fieldLabel="File"
                        fileNameParameter="./fileName"
                        fileReferenceParameter="./fileReference"
                        name="./file"
                        xtype="html5smartfile"/>

                <!--<file
                        jcr:primaryType="cq:Widget"
                        autoUploadDelay="1"
                        ddGroups="[media]"
                        fieldLabel="HTML 5 Smart File"
                        fieldDescription=""
                        fileNameParameter="./fileName"
                        fileReferenceParameter="./fileReference"
                        name="./file"
                        xtype="html5smartfile"/>-->

            </items>
        </tab2>
        <tab3
                jcr:primaryType="cq:Widget"
                title="General"
                xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <width
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Width"
                        name="./width"
                        xtype="textfield"/>
                <height
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Height"
                        name="./height"
                        xtype="textfield"/>
            </items>
        </tab3>
    </items>
</jcr:root>
