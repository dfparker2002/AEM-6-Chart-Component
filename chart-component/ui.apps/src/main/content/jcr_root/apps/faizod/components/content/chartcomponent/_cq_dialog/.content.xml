                                                     name="./color">
                                        </colorPicker>

                                    </items>
                                </column>
                            </items>
                        </field>
                    </multifield>-->
                </items>
            </datasource>
            <diagramm
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Diagramm"
                    sling:resourceType="granite/ui/components/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <graphtype
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/select"
                            emptyText="Please select a graphtype."
                            fieldLabel="Graphtype"
                            name="./graphType">
                        <items
                                jcr:primaryType="nt:unstructured">
                            <chart1
                                    jcr:primaryType="nt:unstructured"
                                    value="line"
                                    text="Line Chart"
                                    selected="{Boolean}true"/>
                            <chart2
                                    jcr:primaryType="nt:unstructured"
                                    value="area"
                                    text="Area Chart"/>
                            <chart3
                                    jcr:primaryType="nt:unstructured"
                                    value="bar"
                                    text="Bar Chart"/>
                            <chart4
                                    jcr:primaryType="nt:unstructured"
                                    value="pie"
                                    text="Pie Chart"/>
                            <chart5
                                    jcr:primaryType="nt:unstructured"
                                    disabled="{Boolean}true"
                                    value="live"
                                    text="Live Chart"/>
                        </items>
                    </graphtype>
                    <xAxisLabel jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldLabel="Label X-Axis" name="./xAxisLabel"/>
                    <yAxisLabel jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldLabel="Label Y-Axis" name="./yAxisLabel"/>
                </items>
            </diagramm>
            <general
                    jcr:primaryType="nt:unstructured"
                    jcr:title="General"
                    sling:resourceType="granite/ui/components/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                </items>
            </general>
        </items>
    </content>
