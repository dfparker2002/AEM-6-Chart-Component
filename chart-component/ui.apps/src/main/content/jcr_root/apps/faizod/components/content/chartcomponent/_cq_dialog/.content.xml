<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Chart Component"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/container">
        <layout
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/layouts/tabs"
                type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <title
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Title"
                    sling:resourceType="granite/ui/components/foundation/section">
                <layout
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                        margin="{Boolean}false"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <text
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                    fieldLabel="Title"
                                    name="./title"/>
                        </items>
                    </column>
                </items>
            </title>
            <datasource
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Datasource"
                    sling:resourceType="granite/ui/components/foundation/section">
                <layout
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                        margin="{Boolean}false"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <datatype
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/select"
                                    emptyText="Please select a type."
                                    fieldLabel="Type"
                                    name="./datasourceType">
                                <items
                                        jcr:primaryType="nt:unstructured">
                                    <!--<option1
                                            jcr:primaryType="nt:unstructured"
                                            value="csv"
                                            text="CSV"/>
                                    <option2
                                            jcr:primaryType="nt:unstructured"
                                            value="json"
                                            text="JSON"/>-->
                                    <option3
                                            jcr:primaryType="nt:unstructured"
                                            value="excel"
                                            text="EXCEL"
                                            selected="{Boolean}true"/>
                                </items>
                            </datatype>
                            <link
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/hyperlink"
                                    href="/apps/faizod/components/content/chartcomponent/sample/sample.xslx"
                                    text="Sample Excelfile"
                                    target="_blank"/>
                            <!--<data
                                    id="date_textarea"
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/textarea"
                                    fieldLabel="Data"
                                    name="./data"/>-->
                            <file
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/fileupload"
                                    autoStart="{Boolean}false"
                                    fieldLabel="File"
                                    fileNameParameter="./datasource/fileName"
                                    fileReferenceParameter="./datasource/fileReference"
                                    multiple="{Boolean}false"
                                    name="./datasource/file"
                                    title="Upload"
                                    uploadUrl="${suffix.path}"
                                    useHTML5="{Boolean}true"/>
                        </items>
                    </column>
                </items>
            </datasource>
            <diagramm
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Chart"
                    sling:resourceType="granite/ui/components/foundation/section">
                <layout
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                        margin="{Boolean}false"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <graphtype
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/select"
                                    emptyText="Please select a charttype."
                                    fieldLabel="Charttype"
                                    name="./chartType">
                                <items
                                        jcr:primaryType="nt:unstructured">
                                    <chart1
                                            jcr:primaryType="nt:unstructured"
                                            value="line"
                                            text="Line Chart"
                                            selected="{Boolean}true"/>
                                    <!--<chart2
                                            jcr:primaryType="nt:unstructured"
                                            value="area"
                                            text="Area Chart"/>
                                    <chart3
                                            jcr:primaryType="nt:unstructured"
                                            value="bar"
                                            text="Bar Chart"/>
                                    <chart4
                                            jcr:primaryType="nt:unstructured"
                                            value="pie"
                                            text="Pie Chart"/>
                                    <chart5
                                            jcr:primaryType="nt:unstructured"
                                            disabled="{Boolean}true"
                                            value="live"
                                            text="Live Chart"/>-->
                                </items>
                            </graphtype>
                            <showXAxis
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                    text="Show X-Axis"
                                    value="true"
                                    default="true"
                                    name="./showXAxis"
                                    fieldDescription="Hides or shows the X-Axis."
                                    tooltipPosition="right"/>
                            <xAxisLabel
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                    fieldLabel="Label X-Axis"
                                    name="./xAxisLabel"/>
                            <showYAxis
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                    text="Show Y-Axis"
                                    value="true"
                                    default="true"
                                    name="./showYAxis"
                                    fieldDescription="Hides or shows the Y-Axis."
                                    tooltipPosition="right"/>
                            <yAxisLabel
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                    fieldLabel="Label Y-Axis"
                                    name="./yAxisLabel"/>
                            <showLegend
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                    text="Show Legend"
                                    value="true"
                                    default="true"
                                    name="./showLegend"
                                    fieldDescription="Hides or shows the charts Legend."
                                    tooltipPosition="right"/>
                            <interactiveGuidline
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                    text="Guideline"
                                    value="true"
                                    default="true"
                                    name="./useGuideline"
                                    fieldDescription="Hides or shows the interactive Guidline."
                                    tooltipPosition="right"/>
                            <jsonconfig
                                    id="config_textarea"
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/textarea"
                                    fieldLabel="Config"
                                    name="./config"
                                    fieldDescription="Enter here any configuration for chart data as an json array. Please use the following link to download a sample configuration."
                                    tooltipPosition="right"/>
                            <link
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/hyperlink"
                                    href="/apps/faizod/components/content/chartcomponent/sample/json-config.json"
                                    text="Example Configuration"
                                    target="_blank"/>
                        </items>
                    </column>
                </items>
            </diagramm>
        </items>
    </content>
</jcr:root>
